resource "aws_iam_role" "{{ resource_reference }}" {
  name = "{{ resource_name }}"

  assume_role_policy = jsonencode({
    Version   = "2012-10-17",
    Statement = [
      {
        Action    = "sts:AssumeRole",
        Effect    = "Allow",
        Principal = {
          Service = "lambda.amazonaws.com"
        }
          Action    = "sts:AssumeRole" 
      }
    ]
  })
}

