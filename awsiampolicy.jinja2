
resource "aws_iam_policy" "{{ policy_resource_reference}}" {
  name        = "{{ resource_name }}"
  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = [
          "ec2:Describe*",
        ]
        Effect   = "Allow"
        Resource = "*"
      }
        ]
  })

}
